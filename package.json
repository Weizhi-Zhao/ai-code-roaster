{
  "name": "ai-code-roaster",
  "displayName": "AI Code Roaster",
  "description": "",
  "version": "0.0.1",
  "license": "GPL-3.0-only",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "ai-code-roaster",
          "name": "AI Code Roaster"
        }
      ]
    },
    "commands": [
      {
        "command": "aiCodeRoaster.setApiKey",
        "title": "AI Code Roaster: Set API Key"
      },
      {
        "command": "aiCodeRoaster.deleteApiKey",
        "title": "AI Code Roaster: Delete API Key"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}