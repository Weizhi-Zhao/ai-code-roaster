{
  "name": "ai-code-roaster",
  "displayName": "AI Code Roaster",
  "icon": "resources/AI-Code-Roaster-icon.png",
  "publisher": "Weizhi-Zhao",
  "description": "AI-powered code roasting with streaming support. Supports multiple AI personalities (roaster/praiser) and works with any OpenAI-compatible API.",
  "version": "0.0.4",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/Weizhi-Zhao/ai-code-roaster.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "AI"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "AI Code Roaster",
      "properties": {
        "aiCodeRoaster.apiBaseUrl": {
          "type": "string",
          "description": "API Base URL (e.g., 'https://openrouter.ai/api/v1')",
          "order": 1
        },
        "aiCodeRoaster.modelName": {
          "type": "string",
          "description": "Model name to use for API calls (e.g., 'nvidia/nemotron-3-nano-30b-a3b:free')",
          "order": 2
        },
        "aiCodeRoaster.role": {
          "type": "string",
          "description": "AI personality for code review. Use 'AI Code Roaster: Switch Role' command to select roles.",
          "order": 3
        }
      }
    },
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "ai-code-roaster",
          "name": "AI Code Roaster",
          "icon": "$(robot)",
          "contextualTitle": "AI Code Roaster"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ai-code-roaster",
        "contents": "Open a file to start roasting!"
      }
    ],
    "commands": [
      {
        "command": "aiCodeRoaster.configureApi",
        "title": "AI Code Roaster: Configure API",
        "icon": "$(settings-gear)"
      },
      {
        "command": "aiCodeRoaster.deleteApiConfig",
        "title": "AI Code Roaster: Delete All Configuration",
        "icon": "$(trash)"
      },
      {
        "command": "aiCodeRoaster.switchRole",
        "title": "AI Code Roaster: Switch Role",
        "icon": "$(account)"
      },
      {
        "command": "aiCodeRoaster.createCustomRole",
        "title": "AI Code Roaster: Create Custom Role"
      },
      {
        "command": "aiCodeRoaster.editCustomRole",
        "title": "AI Code Roaster: Edit Custom Role"
      },
      {
        "command": "aiCodeRoaster.deleteCustomRole",
        "title": "AI Code Roaster: Delete Custom Role"
      }
    ],
    "submenus": [
      {
        "id": "aiCodeRoaster.roleManagement",
        "label": "Role Management",
        "icon": "$(ellipsis)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiCodeRoaster.switchRole",
          "when": "view == ai-code-roaster",
          "group": "navigation@0"
        },
        {
          "command": "aiCodeRoaster.configureApi",
          "when": "view == ai-code-roaster",
          "group": "navigation@1"
        },
        {
          "command": "aiCodeRoaster.deleteApiConfig",
          "when": "view == ai-code-roaster",
          "group": "navigation@2"
        },
        {
          "submenu": "aiCodeRoaster.roleManagement",
          "when": "view == ai-code-roaster",
          "group": "navigation@3"
        }
      ],
      "aiCodeRoaster.roleManagement": [
        {
          "command": "aiCodeRoaster.createCustomRole",
          "group": "role@1"
        },
        {
          "command": "aiCodeRoaster.editCustomRole",
          "group": "role@2"
        },
        {
          "command": "aiCodeRoaster.deleteCustomRole",
          "group": "role@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "diff": "^8.0.2",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}